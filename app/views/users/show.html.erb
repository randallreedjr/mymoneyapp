<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>			
			<h1>
				<%= gravatar_for @user, size: 80 %>
				Welcome, <%= @user.name %>
			</h1>
			<h2>Net worth: $116,513.70</h2>
		</section>
		<%= @user.email %>
	</aside>
	<div class="span8">
		<% if @user.accounts.any? %>
			<h3>Accounts (<%= @user.accounts.count %>)</h3>
			<ol class="accounts">
				<%= render @accounts %>
			</ol>
			<%= will_paginate @accounts %>
		<% end %>
	</div>
</div>